{
  "name": "wurwolves",
  "version": "0.0.1",
  "private": true,
  "description": "A simple werewolves (/ mafia) webapp using a React+Redux frontend with a Python+FastAPI+SQLAlchemy backend, served by a static node server",
  "scripts": {
    "start": "concurrently \"node server\" \"uvicorn backend.main:app --host 0.0.0.0\"",
    "dev": "concurrently \"npm run frontend\" \"npm run backend\"",
    "frontend": "cd react-ui && npm start",
    "backend": "(npm run resetdb || true) && uvicorn backend.main:app --reload",
    "build": "npm run resetdb && cd react-ui && npm run build",
    "install": "pip install -e . && cd react-ui/ && npm install",
    "migrate": "alembic revision --autogenerate",
    "upgrade": "alembic upgrade head",
    "resetdb": "python -m backend.reset_db",
    "test": "pytest && cd react-ui && npm test",
    "nightwatch": "npm run build && concurrently --kill-others --success first \"npm run start\" \"node_modules/.bin/nightwatch\""
  },
  "cacheDirectories": [
    "node_modules",
    "react-ui/node_modules"
  ],
  "dependencies": {
    "concurrently": "^5.2.0",
    "express": "^4.16.4",
    "http-proxy-middleware": "^1.0.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/charlesbaynham/wurwolves.git"
  },
  "keywords": [
    "node",
    "heroku",
    "fastapi",
    "react",
    "wurwolves"
  ],
  "license": "None",
  "devDependencies": {
    "chromedriver": "^87.0.0",
    "geckodriver": "^1.21.0",
    "nightwatch": "^1.5.1"
  }
}
